<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activity.SelectTheRoleActivity"
    android:background="@drawable/select_role_background">

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Who Are You?"
      android:textSize="40dp"
      android:textColor="@color/white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="30dp"/>

  <LinearLayout
      android:id="@+id/user"
      android:layout_width="300dp"
      android:layout_height="80dp"
      android:layout_marginTop="80dp"
      android:orientation="horizontal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView"
      android:background="@drawable/linear_shape1"
      >

    <TextView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="User1"
        android:textSize="40dp"
        android:textColor="@color/white" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:src="@drawable/user_icon"
        app:roundPercent="1"
        android:scaleType="fitXY"/>
<!--android:src="@drawable/user_icon"-->

  </LinearLayout>

  <LinearLayout
      android:id="@+id/vendor"
      android:layout_width="300dp"
      android:layout_height="80dp"
      android:layout_marginTop="80dp"
      android:orientation="horizontal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/user"
      android:background="@drawable/linear_shape2">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:src="@drawable/user_icon"
        app:roundPercent="1"
        android:scaleType="fitXY"/>
    <!-- android:src="@drawable/img"-->


    <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="User2"
            android:textSize="40dp"
            android:textColor="@color/white" />
    <!--android:text="Vendor"-->



  </LinearLayout>

  <LinearLayout
      android:id="@+id/admin"
      android:layout_width="300dp"
      android:layout_height="80dp"
      android:orientation="horizontal"
      app:circularflow_radiusInDP="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginTop="80dp"
      app:layout_constraintTop_toBottomOf="@+id/vendor"
      android:background="@drawable/linear_shape1">

    <TextView
        android:layout_width="209dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="User3"
        android:textSize="40dp"
        android:textColor="@color/white" />
<!--android:text="Admin"-->
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        app:roundPercent="1"
        android:scaleType="fitXY"
        android:src="@drawable/user_icon" />
<!--android:src="@drawable/img_2"-->

  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>