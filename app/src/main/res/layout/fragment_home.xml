<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/paper_scrap"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_image"

                android:foregroundGravity="top|center"
                android:scaleType="fitXY"
                android:src="@drawable/news_paper" />

            <TextView

                android:layout_width="match_parent"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center"
                android:text="NewsPaper"
                android:textSize="8pt"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/plastic_bottle_scrap"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_image"
                android:foregroundGravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/plastic_bottle" />

            <TextView

                android:layout_width="match_parent"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center"
                android:text="Bottles"
                android:textSize="8pt"
                android:textStyle="bold"

                />

            <ImageButton
                android:id="@+id/metals"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_image"
                android:foregroundGravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/iron" />

            <TextView

                android:layout_width="match_parent"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center"
                android:text="Metals"
                android:textSize="8pt"
                android:textStyle="bold"

                />


            <ImageButton
                android:id="@+id/computer_scrap"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_image"
                android:foregroundGravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/computer" />

            <TextView

                android:layout_width="match_parent"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center"
                android:text="Computer"
                android:textSize="8pt"
                android:textStyle="bold"

                />

            <ImageButton
                android:id="@+id/books_scrap"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_image"
                android:foregroundGravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/books_scrap" />

            <TextView

                android:layout_width="match_parent"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center"
                android:text="Books"
                android:textSize="8pt"
                android:textStyle="bold"

                />

            <ImageButton
                android:id="@+id/old_scrap"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_image"
                android:foregroundGravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/old_items" />

            <TextView

                android:layout_width="match_parent"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center"
                android:text="Old Items"
                android:textSize="8pt"
                android:textStyle="bold"

                />




        </GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>